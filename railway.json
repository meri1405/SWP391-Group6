{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd SWP_BACKEND/SchoolMedicalManagementSystem/SchoolMedicalManagementSystem && ./mvnw clean package -DskipTests"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "cd SWP_BACKEND/SchoolMedicalManagementSystem/SchoolMedicalManagementSystem && java -Dspring.profiles.active=prod -jar target/SchoolMedicalManagementSystem-0.0.1-SNAPSHOT.jar",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
